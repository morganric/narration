    <%= stylesheet_link_tag "paper", :media => "all" %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    <%= yield(:page_stylesheet) if content_for?(:page_stylesheet) %>
      <%= javascript_include_tag "paper" %>
    <%= yield(:page_javascript) if content_for?(:page_javascript) %>
    <style type="text/css">

      body {
    content: '';
    /*background-image: url('http://res.cloudinary.com/narration/image/upload/v1452350191/space_jddngw.jpg') !important;
    background-size: cover;*/
    background-color: #eee !important;
  }


    </style>
  </head>
  <body>
  <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main" style="margin-top:60px;">
      <%= render 'layouts/messages' %>

      <div class="container">
      <br/>
        <%= yield %>
      </div>
    </main>
    <br/>
    <br/>
      <footer class="footer">
      <div class="container text-center">
        <ul class="footer-nav">
       <li><%#= link_to 'About', about_path %></li>
        <li><%= link_to 'Twitter', 'http://twitter.com/narrated_org', target: '_blank' %></li>
         <li><%= link_to 'Contact', 'mailto:narratedorg@gmail.com', target: '_blank' %></li>
        </ul>
      <br/>
        <p class="text-muted">&copy; narrated.org</p>


      </div>
    </footer>

