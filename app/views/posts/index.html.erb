
<h1 class="text-center">Narration.org</h1>
<hr/>

<div class="col-md-12">
	<div class="col-md-8">
	<ul>
		<% @posts.each do |post| %>
			<li class="well">
	        <h3>
	        	<%= link_to truncate(post.title, :length => 40), post_path(post) %>
	        	<br/>
	        <small>
	        	<%= link_to post.user.profile.display_name, vanity_profile_path(:id => post.user.profile) %>
	        </small>
	        </h3>
	        </li>
	    <% end %>
	    </ul>
	</div>
	<div class="col-md-4">
		
	</div>

</div>



