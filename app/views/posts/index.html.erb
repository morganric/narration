
<h1 class="text-center">Needs A Name</h1>
<hr/>

<div class="col-md-12">
	<div class="col-md-8">


<ul class="nav nav-pills" id="myTabs">
  <li class="active"><a href="#popular" data-toggle="tab">
    <i class="glyphicon glyphicon-play" ></i> Popular
  </a></li>
  <li><a href="#new" data-toggle="tab">
  <i class="glyphicon glyphicon-upload" ></i> New
  </a></li>

</ul>


<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in" id="popular">
<br/>

	<ul class="posts">
		<% @posts.order('plays DESC').each do |post| %>
			<li class="well">
          <%= link_to image_tag(post.image.url(:thumb), class: "img-thumbnail pull-left", style: "margin-right: 10px;"), user_post_path(id: post, user_id: post.user.name) %>
          <h3>
            <%= link_to truncate(post.title, :length => 30), user_post_path(id: post, user_id: post.user.name) %>
            <br/>
          <small>
            via <%= link_to post.user.profile.display_name, vanity_profile_path(:id => post.user.profile) %>
          </small>
          </h3>
          <h6>
          <label class='label label-primary'><i class="glyphicon glyphicon-play" ></i> <%= pluralize(post.plays, 'play') %>
  			</label>&nbsp;
          <%  post.tag_list.each do |tag| %>
			  <label class="label label-default">
			  <i class="glyphicon glyphicon-tag" ></i>&nbsp;
			  <%= link_to "##{tag}", tag_path(tag: tag), :class=>"white"%></label>&nbsp;
			<% end %>
			</h6>
          </li>
	    <% end %>
	    </ul>

	</div>
	<div class="tab-pane fade" id="new">
<br/>

	<ul class="posts">
		<% @posts.order('created_at DESC').each do |post| %>
			<li class="well">
          <%= link_to image_tag(post.image.url(:thumb), class: "img-thumbnail pull-left", style: "margin-right: 10px;"), user_post_path(id: post, user_id: post.user.name) %>
          <h3>
            <%= link_to truncate(post.title, :length => 30), user_post_path(id: post, user_id: post.user.name) %>
            <br/>
          <small>
            via <%= link_to post.user.profile.display_name, vanity_profile_path(:id => post.user.profile) %>
          </small>
          </h3>
          <h6>
          <label class='label label-primary'><i class="glyphicon glyphicon-play" ></i> <%= pluralize(post.plays, 'play') %>
  			</label>&nbsp;
          <%  post.tag_list.each do |tag| %>
			  <label class="label label-default">
			  <i class="glyphicon glyphicon-tag" ></i>&nbsp;
			  <%= link_to "##{tag}", tag_path(tag: tag), :class=>"white"%></label>&nbsp;
			<% end %>
			</h6>
          </li>
	    <% end %>
	    </ul>

	</div>

</div>
	</div>
	<div class="col-md-4">
		
	</div>

</div>



