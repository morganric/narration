<h1>Staff Picks</h1>
<hr/>

<div class="col-md-12" >
		<% @posts.order('plays DESC').each do |post| %>
			<div class="col-md-4 well">
          <%= link_to image_tag(post.image.url(:square), class: "img-thumbnail pull-left", style: "margin-right: 10px;"), user_post_path(id: post, user_id: post.user.name) %>
          <h3>
            <%= link_to truncate(post.title, :length => 18), user_post_path(id: post, user_id: post.user.name) %>
            <br/>
          <small>
            via <%= link_to post.user.profile.display_name, vanity_profile_path(:id => post.user.profile) %>
          </small>
          </h3>
          <h6>
          <label class='label label-primary'><i class="glyphicon glyphicon-play" ></i> <%= pluralize(post.plays, 'play') %>
  			</label>&nbsp;
          <%  post.tag_list.each do |tag| %>
			  <label class="label label-default">
			  <i class="glyphicon glyphicon-tag" ></i>&nbsp;
			  <%= link_to "##{tag}", tag_path(tag: tag), :class=>"white"%></label>&nbsp;
			<% end %>
			</h6>
          </div>
	    <% end %>
</div>