<h1>Editing </h1>

<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>


  <div class="col-md-12  row">
      
        <div class="form-inputs well">
          <%= f.label :image %>
          <%= f.file_field :image %>
          </div>

          <div class="form-inputs well">
          <%= f.input :summary, placeholder: "Describe this post here...", :input_html => {:rows => 4} %>
          </div>

             <div class="form-inputs well">
          <%= f.label :tags %>
          <%= f.text_field :tag_list, :onfocus=> @post.tags.map(&:name).join(","), :value=> @post.tags.map(&:name).join(","), :class=>"form-control", placeholder: @post.tags.map(&:name).join(",") || "e.g. tag1, tag2, tag3" %>
          </div>
  </div>

  <div class="col-md-12 row">
    <hr/>
     <% if user_signed_in? %>
          <% if current_user.try(:admin?) %>

          <div class="form-inputs well">
            <h3>Admin</h3>
            <%= f.input :title %>
             <%= f.input :audio_link %>
             <%= f.input :start_time %>
             <%= f.input :stop_time %>
             <%#= f.input :end_time %>
             <%= f.input :created_at %>
            <%= f.input :plays%>
             <%= f.label :banner %>
            <%= f.file_field :banner %>
             <%= f.input :featured %>
             <%= f.input :hidden %>
             <%= f.label :type_of %>
             <%= f.select :type_of, [ "narration", "podcast", "audiobook"], include_blank: false %>
            <br/>
            
            
            <%= f.input :slug, as: :hidden %>
            <%= f.input :html,  as: :hidden %>
            <%= f.input :body,  as: :hidden %>
            <%= f.input :user_id,  as: :hidden %>
          </div>
        <% end %>
        <% end %>
</div>

<br/>
      <hr/>

  <div class="form-actions pull-left row col-md-12">
       <br/>
    <%= f.button :submit, class: "btn btn-block btn-lg" %>
    <br/>
<br/>
  </div>
<% end %>

