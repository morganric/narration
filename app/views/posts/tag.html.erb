<h1>
 Tagged: <%= @tag %>
</h1>
<hr/>

<br/>

<div class="col-md-12">
<div class="col-md-8">
	
	 <%= render 'shared/posts', :posts => @posts %>


</div>
<div class="col-md-4">

	<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title"><i class="glyphicon glyphicon-share-alt"></i>  Share </h3>
			  </div>
			  <div class="panel-body">

			<ul class="nav social" style="padding-left:40px;">
				<li><%= tweet_button(count: 'inline', :url => tag_url(@tag), via: "narrated_org") %></li>
			  <li style="postion:relative; top:-6px;"><%= like_button("1440239169528450", send: true, :url => tag_url(@tag), layout: :button) %></li>
			  
			  </ul>

			</div>
		</div>

	<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">Trending Tags</h3>
			  </div>
			  <div class="panel-body">
	
	 <% @top.each do |tag| %>
	 	<label class="label label-default pull-left" style="font-size:14px; margin-right: 5px;">
			  <i class="glyphicon glyphicon-tag" ></i>&nbsp; 
			  <%= link_to "##{tag}", tag_path(tag: tag.name), :class=>"white"%></label>&nbsp;
	 <% end %>
	 </div>
	 </div>

</div>


</div>
