<div class="well">
<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :display_name %>
   <%= f.label :image %>
    <%= f.file_field :image %>
     <br/>
    <%= image_tag(@profile.image.url(:thumbnail)) %>
    <br/>
     <br/>
    <%= f.input :banner, as: :hidden %>
    <%= f.input :bio %>
    <%= f.input :website %>
    <%= f.input :twitter %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>