
<div class="col-md-12">

<div class="col-md-4 text-center">
<br/>
<p class="">
  <%= image_tag @profile.image.url(:square), class: "img-responsive img-circle text-center" %>
</p>

   
  <% if user_signed_in? %>
    <% if current_user.try(:admin?) || current_user == @profile.user %>
        <%= link_to 'Edit', edit_profile_path(@profile), class: "btn btn-block" %>
    <% end %>
  <% end %> 

</div>

<div class="col-md-8">

<h1>
  <%= @profile.display_name || @profile.username %>
</h1>
<p>
<ul class="nav nav-tabs" id="myTabs">
  <li class="active"><a href="#uploads" data-toggle="tab">
    <i class="glyphicon glyphicon-upload" ></i> Uploads
  </a></li>
  <li><a href="#about" data-toggle="tab">
  <i class="glyphicon glyphicon-info-sign" ></i> About
  </a></li>
  <li><a href="#listens" data-toggle="tab">
  <i class="glyphicon glyphicon-headphones" ></i> Listens
  </a></li>

</ul>
</p>
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in" id="uploads">
<br/>

  <%= render 'shared/posts', :posts => @posts %>

</div>

  <div class="tab-pane fade" id="listens">
<br/>

 <ul class="posts">
    <% @listens.each_with_index do |post| %>



      <li class="panel">

        <div class="panel-body">
          <%= link_to cl_image_tag(post.image.url(:thumb) || post.user.profile.image.url(:thumb) || "http://res.cloudinary.com/narration/image/upload/v1450280814/Screen_Shot_2015-12-16_at_16.35.58_cbntzj.png",  :crop => :scale , class: "img-thumbnail pull-left", style: "margin-right: 10px; width:100px;"), user_post_path(id: post, user_id: post.user.name) %>
  
         
      <h4>
        <%= link_to truncate(post.title, length: 45), user_post_path(id: post, user_id: post.user.name) %>
        <br/>
      </h4>

          <h5>
          <% unless post.author.blank? %>
     
            by <%= link_to post.author, author_path(author: post.author) %> 
          <% end %> 
          <% unless post.provider.blank? %>
         
            on <%= link_to post.provider, provider_path(provider: post.provider) %>
    

          <% end %>
                </h5>

      <h6>
      via   <%= link_to post.user.profile.display_name, vanity_profile_path(:id => post.user.profile.slug) %>
      </h6>

          <h6>
          <label class='label label-primary'><i class="glyphicon glyphicon-play" ></i> <%= pluralize(post.plays, 'play') %>
        </label>&nbsp;
          <%  post.tags.limit(5).each do |tag| %>
        <label class="label label-default">
        <i class="glyphicon glyphicon-tag" ></i>&nbsp;
        <%= link_to "##{tag}", tag_path(tag: tag), :class=>"white"%></label>&nbsp;
      <% end %>
      </h6>
      </div>
          </li>
      <% end %>
      </ul>
</div>

<div class="tab-pane fade " id="about">
<br/>

<p class="well">

  <%= @profile.bio %>
</p>

<p>
  <strong>Website:</strong>
  <%= @profile.website %>
</p>

<p>
  <strong>Twitter:</strong>
  <%= @profile.twitter %>
</p>

</div>

</div>
</div>



</div>


