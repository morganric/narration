<% content_for :title do %>Welcome<% end %>
<br/>
<br/>


<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
  	<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <% @posts[1..@posts.length].each_with_index do |post, index| %>
    <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" class=""></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="<%= @posts.first.image.url(:banner) || 'http://res.cloudinary.com/narration/image/upload/v1450280814/Screen_Shot_2015-12-16_at_16.35.58_cbntzj.png' %>" alt="...">
      <div class="carousel-caption">
        <h3><%= link_to @posts.first.title, user_post_path(user_id: @posts.first.user.name, id: @posts.first.slug) %></h3>
      </div>
    </div>
    <% @posts[1..@posts.length].each_with_index do |post, index| %>
    <div class="item">
      <img src="<%= post.image.url(:banner) || 'http://res.cloudinary.com/narration/image/upload/v1450280814/Screen_Shot_2015-12-16_at_16.35.58_cbntzj.png' %>" alt="...">
      <div class="carousel-caption">
         <h3><%= link_to post.title, user_post_path(user_id: post.user.name, id: post.slug) %></h3>

      </div>
    </div>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="jumbotron">
	<img src="http://res.cloudinary.com/narration/image/upload/v1450280814/Screen_Shot_2015-12-16_at_16.35.58_cbntzj.png" style="width:200px" class="img-thumbnail pull-right">
  <h1>Welcome to narrated.org</h1>
  <p>The home of narrated news, blogs and stories.
  </p>
  <p><a href="<%= new_user_registration_url %>" class="btn btn-primary btn-lg">Signup</a></p>
</div>
